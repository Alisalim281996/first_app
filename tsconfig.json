{
  "compilerOptions": {
    "target": "ESNext", // تحديث الهدف لـ ESNext لأحدث دعم
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ], // تحديث المكتبات المضمنة
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext", // تغيير module إلى ESNext (بدلاً من "esnext" بصيغة غير واضحة)
    "moduleResolution": "Node", // تغيير إلى "Node" وهو الأنسب لـ Next.js
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "forceConsistentCasingInFileNames": true, // إضافي لتحسين التوافق في نظام الملفات
    "strictNullChecks": true, // تعزيز صرامة النوع null
    "noImplicitAny": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
